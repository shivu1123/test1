<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.test1shivam.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="Username:" layoutX="50.0" layoutY="70.0"/>
    <TextField fx:id="usernameField" layoutX="150.0" layoutY="70.0"/>
    <Label text="Password:" layoutX="50.0" layoutY="110.0"/>
    <PasswordField fx:id="passwordField" layoutX="150.0" layoutY="110.0"/>
    <Button text="Login" layoutX="150.0" layoutY="150.0" onAction="#handleLogin"/>
    <Label fx:id="messageLabel" layoutX="50.0" layoutY="190.0" textFill="red"/>

</VBox>
